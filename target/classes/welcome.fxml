<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="WelcomeController" 
      alignment="CENTER" spacing="20" stylesheets="@welcome.css">
    
    <Label text="Welcome to 3 Card Poker!" styleClass="title"/>
    
    <VBox spacing="10" alignment="CENTER">
        <Label text="Connect to Server"/>
        
        <HBox spacing="10" alignment="CENTER">
            <Label text="IP Address:"/>
            <TextField fx:id="ipAddressField" prefWidth="200"/>
        </HBox>
        
        <HBox spacing="10" alignment="CENTER">
            <Label text="Port:"/>
            <TextField fx:id="portField" prefWidth="200"/>
        </HBox>
        
        <Button fx:id="connectButton" text="Connect" onAction="#handleConnect"/>
        
        <Label fx:id="statusLabel" text="" styleClass="status"/>
    </VBox>
</VBox>